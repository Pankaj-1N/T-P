<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:supportsRtl="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:theme="@style/Theme.TP">

        <!-- Launcher -->
        <activity
            android:name="com.example.tp.ui.auth.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Dashboards -->
        <activity
            android:name="com.example.tp.AdminDashboardActivity"
            android:exported="false" />
        <activity
            android:name="com.example.tp.StudentDashboardActivity"
            android:exported="false" />

        <!-- Admin feature screens -->
        <activity android:name="com.example.tp.ManageNoticesActivity" android:exported="false" />
        <activity android:name="com.example.tp.ManagePlacementsActivity" android:exported="false" />
        <activity android:name="com.example.tp.ManageQAActivity" android:exported="false" />
        <activity android:name="com.example.tp.ManageStudentsActivity" android:exported="false" />
        <activity android:name="com.example.tp.NoticesActivity" android:exported="false" />
        <activity android:name="com.example.tp.PlacementRecordsActivity" android:exported="false" />
        <activity android:name="com.example.tp.QAManagementActivity" android:exported="false" />

        <!-- Shared -->
        <activity android:name="com.example.tp.SettingsActivity" android:exported="false" />
        <activity android:name="com.example.tp.ProfileActivity" android:exported="false" />

    </application>
</manifest>
